{
    "manifest_version": 3,
    "name": "Gemini Focus",
    "version": "1.0",
    "description": "Automatically focuses the input box on gemini.google.com when the tab becomes visible.",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "*://gemini.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}